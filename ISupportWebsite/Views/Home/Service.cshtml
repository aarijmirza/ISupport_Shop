@{
    ViewData["Title"] = "Service";
}
<style>
    .PopularService-container {
        border-radius: 30px;
        background: linear-gradient(to right, #EFD74A, #F9444B, #2AA1FB, #14E4AB);
        padding: 2px;
    }

    .PopularService-Circle {
        border: none;
        border-radius: 30px;
        padding: 28px 28px;
        background-color: white;
        cursor: pointer;
    }

    .bg-img {
        height: 219px;
    }

    @@media only screen and (max-width: 600px) {
        .bg-img {
            height: 155px;
        }
    }

    .btn-primary {
        background: #04385F;
        color: white;
        padding: 8px 22px;
        border-bottom-right-radius: 8px;
        border-top-right-radius: 8px;
        margin-left: -10px;
    }

    .text-limit {
        display: block;
        width: 235px;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
    }

    .product-thumb {
        border: 1px solid #CCCCCC;
        border-radius: 15px;
        width: 234px;
        height: 234px;
    }

    @@media only screen and (max-width: 600px) {
        .product-thumb {
            border: 1px solid #CCCCCC;
            border-radius: 15px;
            width: 175px;
            height: 175px;
        }

        .text-limit {
            display: block;
            width: 170px;
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
        }

        .main-bg {
            height: 160px !important;
        }

        .main-title {
            font-size: 16px;
            font-weight: 600;
        }

        .text-sub-display {
            font-size: 8px !important;
            line-height: 16px;
            letter-spacing: 1.1px;
        }
    }
</style>
<div class="breadcrumb-block style-shared">
    <div class="breadcrumb-main overflow-hidden" style="background: url('assets/images/Service-main-bg.png'); background-size:cover; margin-top:5rem;height: 340px;">
        <div class="container lg:pt-[134px] pt-24 pb-10 relative">
            <div class="main-content w-full h-full flex flex-col items-center justify-center relative z-[1]">
                @*<div class="text-content">
                <div class="heading2 text-center">About Us</div>
                <div class="link flex items-center justify-center gap-1 caption1 mt-3">
                <a href='@Url.Action("Index","Home")'>Homepage</a>
                <i class="ph ph-caret-right text-sm text-secondary2"></i>
                <div class='text-secondary2 capitalize'>About Us</div>
                </div>
                </div>*@
            </div>
        </div>
    </div>
</div>
<div class="trending-block style-six md:pt-10 pt-10 pb-10">
    <div class="container-AllProducts">
        <div class="heading3 text-center">
            Service Categories
        </div>
        <div class="list-trending relative section-swiper-navigation style-small-border style-outline md:mt-10 mt-6">
            <div class="swiper-button-prev"></div>
            <div class="swiper swiper-list-trending h-full relative">
                <div class="swiper-wrapper">
                    @foreach (var item in ViewBag.serviceCategory)
                    {
                        <div class="swiper-slide">
                            <a href="@Url.Action("Service", "Home", new { ServiceCategoryID = item.ServiceCategoryID })" class="trending-item block relative cursor-pointer">
                                <div class="PopularService-container">
                                    <div class="bg-img rounded-full overflow-hidden PopularService-Circle">
                                        <img src="@ViewBag.ImageUrl@item.Image" alt="@item.Name" class='w-full'>
                                        @* <img src='assets/images/collection/category-organic1.png' alt='outerwear' class='w-full'> *@
                                    </div>
                                </div>
                                <div class="trending-name text-center mt-5 duration-500">
                                    <span class='heading5'>@item.Name</span>
                                    @* <span class='text-secondary'> (12)</span> *@
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </div>
            <div class="swiper-button-next"></div>
        </div>
    </div>
</div>

<!-- Main Section -->
<div class="shop-product breadcrumb1 lg:py-10 md:py-14 py-0">
    <div class="container-AllProducts pt-10">
        <div class="flex max-md:flex-wrap max-md:flex-col-reverse gap-y-8">
            <div class='sidebar lg:w-1/4 md:w-1/3 w-full md:pr-12'>
                <div class="filter-type-block pb-8 border-b border-line">
                    <div class="heading6">Search Service</div>
                    <div class="select-block relative pt-4">
                        <input id="select-filter" name="select-filter" class='caption1 py-2 pl-3 md:pr-20 pr-10 rounded-lg border border-line' />
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                </div>
                <div class="filter-type-block pb-8 border-b border-line  mt-8">
                    <div class="heading6">Service Categories</div>
                    <div class="list-type filter-type menu-tab mt-4">
                        @foreach (var item in ViewBag.CatCount)
                        {
                            <a class='item tab-item flex items-center justify-between cursor-pointer' data-item="t-shirt" href="@Url.Action("Service", "Home", new { ServiceCategoryID = item.ServiceCategoryID })">
                                <div class='type-name text-secondary has-line-before hover:text-black capitalize'>
                                    @item.Name
                                </div>
                                <div class='text-secondary2 number'>
                                    @item.CatCount
                                </div>
                            </a>
                        }
                    </div>
                </div>
                <div class="filter-brand pb-8 mt-8">
                    <div class="heading6">Best Services</div>
                    <div class="list-brand mt-4" style="background:#f5f5f5;padding: 10px;">
                        @foreach (var item in ViewBag.service)
                        {
                            <div class="brand-item flex items-center justify-between" data-item="adidas">
                                <div class="left flex items-center cursor-pointer">

                                    <div class="" style="background: white; border: 1px solid, #f5f5f5; border-radius: 5px;">
                                        <img src='@ViewBag.ImageUrl@item.Image' alt='bg-img' class='w-20 h-20 object-cover'>
                                    </div>
                                    <div class="product-infor mt-4 lg:mb-7 pl-2">
                                        <div class="product-name text-title duration-300">
                                            @item.Name
                                        </div>

                                        <div class="product-price-block flex items-center gap-2 flex-wrap mt-1 duration-300 relative z-[1]">
                                            <div class="product-price text-title">
                                                BHD @item.Price
                                            </div>
                                            <div class="product-origin-price caption1 text-secondary2">
                                                <del>BHD @item.DiscountedPrice</del>
                                            </div>

                                        </div>
                                    </div>
                                    @* <div class="product-name text-title duration-300">
                                @item.Name
                                </div>
                                <div class="product-price-block flex items-center gap-2 flex-wrap mt-1 duration-300 relative z-[1]">
                                <div class="product-price text-title">
                                BHD @item.Price
                                </div>
                                <div class="product-origin-price caption1 text-secondary2">
                                <del>BHD @item.DiscountedPrice</del>
