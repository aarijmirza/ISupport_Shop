@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="breadcrumb-block style-shared">
    <div class="breadcrumb-main overflow-hidden" style="background: url('assets/images/AboutUs_bg.png'); background-size:cover; margin-top:5rem;height: 340px;">
        <div class="container lg:pt-[134px] pt-24 pb-10 relative">
            <div class="main-content w-full h-full flex flex-col items-center justify-center relative z-[1]">
                <div class="text-content">
                    <div class="heading2 text-center">Privacy Policy</div>
                    <div class="link flex items-center justify-center gap-1 caption1 mt-3">
                        <a href='@Url.Action("Index","Home")'>Homepage</a>
